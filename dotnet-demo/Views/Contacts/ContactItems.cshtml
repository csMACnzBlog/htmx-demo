@model ContactsViewModel
@foreach (var x in Model.Contacts)
{
    <li>@x.Id @x.FirstName @x.LastName</li>
}
@if (Model.Contacts.Count > 0)
{
    <div id="nextPage" hx-get="@Url.Action("List", "Contacts", new { q = Model.Query, page = Model.NextPage })"
        hx-trigger="revealed" hx-swap="outerHTML">
    </div>
}