@addTagHelper *, Htmx.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_demo</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@picocss/pico@1/css/pico.classless.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <hgroup>
        <h1><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HTMX dotnet Demo</a></h1>
        <h2>A demo of <code>HTMX</code> using dotnet as the server.</h2>
        </hgroup>

        <nav>
            <ul>
                <li>
                    <a hx-get="@Url.Action("Index", "Home")" hx-target="main" hx-swap="innerHTML" hx-push-url="true" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li>
                    <a hx-get="@Url.Action("Privacy", "Home")" hx-target="main" hx-swap="innerHTML" hx-push-url="true" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li>
                    <a hx-get="@Url.Action("List", "Contacts")" hx-target="main" hx-swap="innerHTML" hx-push-url="true" asp-area="" asp-controller="Contacts" asp-action="Index">Contacts</a>
                </li>
            </ul>
        </nav>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <small>
            &copy; 2023 - dotnet_demo - <a hx-get="@Url.Action("Privacy", "Home")" hx-target="main" hx-swap="innerHTML" hx-push-url="true" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </small>
    </footer>
    <script src="https://unpkg.com/htmx.org@1.9.6"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
